
@{ ViewBag.Title = "Index";
                Layout = "~/Areas/Admin/Views/Shared/_LayoutDashBoard.cshtml"; }
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-7 align-self-center">
            <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">Quản lý khách hàng</h4>
            <div class="d-flex align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item"><a href="~/Admin/DashBoard/Index">Dashboard</a></li>
                        <li class="breadcrumb-item active">Danh sách khách hàng</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<br />

<div class="card-body">
    <h3 class="text-dark text-uppercase card-title">Khách hàng</h3>

    <hr />
    <div class="row">
        <div class="col-sm-12 col-md-6">
            
        </div>
        <div class="col-sm-12 col-md-6">
            <div id="zero_config_filter" class="dataTables_filter" style="text-align: right;">
                <label style="display: flex; align-items: center;justify-content: flex-end;">
                    
                    
                            <input type="search" id="searchString" name="searchString" placeholder="Tên tài khoản..." class="form-control form-control-sm" aria-controls="zero_config" style="width:auto; height: 38px" />
                            <input type="button" id="search-btn" class="btn btn-primary" value="Tìm" />
                </label>
            </div>
        </div>
    </div>
    <div class="table-responsive">

        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col" class="text-center">NO</th>
                    <th class="text-center">Tên</th>
                    <th class="text-center">Email</th>
                    <th class="text-center">Số điện thoại</th>
                    <th class="text-center">Địa chỉ</th>
                    <th class="text-center">Tính năng</th>
                </tr>
            </thead>
            <tbody id="tblDsCustomer"></tbody>
        </table>
    </div>
</div>

<style>
    .page-item a {
        display: block;
        padding: .5rem .75rem;
        margin-left: -1px;
        line-height: 1.25;
        color: #5f76e8;
        background-color: #fff;
        border: 1px solid #dee2e6;
    }

    .pagination {
        margin: 2px 0;
        white-space: nowrap;
        justify-content: flex-end;
    }
</style>
@section scripts{
    <script>
        $(document).ready(function () {
            LoadDsCustomer();
        });
        // Sự kiện click của button Delete
        $(document).on('click', "button[name= 'delete']", function () {
            let idCustomer = $(this).closest('tr').attr('id');
            if (confirm("Are you sure you want to delete this?!")) {
                $.ajax({
                    url: '/Admin/CRUDcustomer/Delete',
                    type: 'post',
                    data: {
                        customerId: idCustomer
                    },
                    success: function (data) {
                        if (data.code == 200) {
                            alert(data.msg);
                            LoadDsCustomer();
                        }
                        else {
                            alert(data.msg);
                        }
                    }
                });
            }
        });


        $('#search-btn').on('click', function () {
            LoadDsCustomer($("#searchString")[0].value);
        })

        function LoadDsCustomer(searchString = "") {
            //Dùng ajax để load danh sách member trong controller CRUDmember
            $.ajax({
                url: `/Admin/CRUDcustomer/DsCustomer?searchString=${searchString}`,
                type: 'get',
                success: function (data) {
                    if (data.code == 200) {
                        $('#tblDsCustomer').empty();
                        let stt = 1;
                        $.each(data.dsCustomer, function (k, v) {
                            let tr = '<tr id = "' + v.customerId + '">'
                            tr += '<td class="text-center">' + stt + '</td>';
                            tr += '<td class="text-center">' + v.firstName + '<span> </span>' + v.lastName + '</td>';
                            tr += '<td class="text-center">' + v.email + '</td>';
                            tr += '<td class="text-center">' + v.phone + '</td>';
                            tr += '<td class="text-center">' + v.address + '</td>';
                            tr += '<td class="text-center">';
                            tr += '<button class="btn waves-effect waves-light btn-danger" name ="delete"><i class="ti-trash"></i></button>';
                            tr += '</td>';
                            tr += '</tr > ';
                            $('#tblDsCustomer').append(tr);
                            stt++;
                        });
                    }
                }

            });
        }
    </script>    
}
