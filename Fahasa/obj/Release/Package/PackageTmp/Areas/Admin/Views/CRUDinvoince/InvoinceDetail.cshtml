@using ShopOnline.Models
@model List<InvoinceDetail>
@{
    ViewBag.Title = "InvoinceDetail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutDashBoard.cshtml";
}
@{
    Invoince info = Session["information"] as Invoince;
}

<div class="jumbotron jumbotron-fluid">
    <h1 class="mt-3 theme-color mb-4 text-center">Chi tiết hóa đơn</h1>
    <p class="lead text-center">
        Hóa đơn / #@ViewBag.invoinceNo
    </p>
    <p class="lead text-center">
        <a class="btn btn-primary btn-lg" href="~/Admin/CRUDinvoince/Index" role="button">Trở về</a>
    </p>
</div>
<div class="card-body">
    <h3 class="mb-3 text-dark text-uppercase">Thông tin</h3>
    <hr />
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="text-center">Tên</th>
                <th scope="col" class="text-center">Email</th>
                <th scope="col" class="text-center">Số điện thoại</th>
                <th scope="col" class="text-center">Địa chỉ</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="text-center">
                    @if (info.customerId != null && info.userName == null)
                    {
                        @info.Customer.firstName<span> </span>@info.Customer.lastName
                    }
                    else
                    { 
                        @info.Member.firstName<span> </span>@info.Member.lastName
                    }
                </td>
                <td class="text-center">
                    @if (info.customerId != null && info.userName == null)
                    {
                        @info.Customer.email
                    }
                    else
                    { 
                        @info.Member.email
                    }
                </td>
                <td class="text-center">
                    @if (info.customerId != null && info.userName == null)
                    {
                        @info.Customer.phone
                    }
                    else
                    {
                        @info.Member.phone
                    }
                </td>
                <td class="text-center">
                    @if (info.customerId != null && info.userName == null)
                    {
                        @info.Customer.address
                    }
                    else
                    { 
                        @info.Member.address
                    }
                </td>
            </tr>

        </tbody>
    </table>

    <h3 class="mb-3 text-dark text-uppercase">Sản phẩm</h3>
    <hr />
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="text-center">STT</th>
                <th scope="col" class="text-center">Tên</th>
                <th scope="col" class="text-center">Số lượng</th>
                <th scope="col" class="text-center">Giá</th>
                <th scope="col" class="text-center">Giảm giá</th>
                <th scope="col" class="text-center">Tổng tiền</th>
            </tr>
        </thead>
        <tbody>
            @{ int stt = 1, total = 0, totaldiscount = 0, totalprice = 0, tempPrice = 0;}
            @foreach (var i in Model)
            {
                tempPrice = (int)i.totalPrice + (int)i.totalDiscount;
                <tr>
                    <th scope="row" class="text-center font-weight-medium" width="80px">@stt</th>
                    <td width="400px">
                        <div class="row">
                            <div class="col-md-3">
                                <img src=@Url.Content("" + i.Product.image) width="80%" />
                            </div>
                            <div class="col-md-9">
                                @i.Product.productName
                            </div>
                        </div>
                    </td>
                    <td class="text-center">@i.quanlityProduct</td>
                    <td class="text-center">@i.Product.price VNĐ</td>
                    <td class="text-center">@i.Product.discount%</td>
                    <td class="text-center">@tempPrice VNĐ</td>
                </tr>
                stt++;
                total += (int)i.totalPrice;
                totaldiscount += (int)i.totalDiscount;
            }
            @{ 
                totalprice = total + totaldiscount; 
             }
        </tbody>
    </table>

    <h3 class="mb-3 text-dark text-uppercase">Thanh toán</h3>
    <hr />
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="text-center">Tổng tiền</th>
                <th scope="col" class="text-center">Vận chuyển</th>
                <th scope="col" class="text-center">Tiền chiết khấu</th>
                <th scope="col" class="text-center">Tiền phải trả</th>
                <th scope="col" class="text-center"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="text-center">@totalprice VNĐ</td>
                <td class="text-center">0 VNĐ</td>
                <td class="text-center">-@totaldiscount VNĐ</td>
                <td class="text-center">@total VNĐ</td>
                <td class="text-center"><a href="@Url.Action("ExportPDF", "CRUDinvoince")"><u>In hóa đơn</u></a></td>
            </tr>
        </tbody>
    </table>

</div>
