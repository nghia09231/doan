@using ShopOnline.Models
@using PagedList.Mvc
@using System.Globalization;
@using System; 
@model PagedList.PagedList<Member>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutDashBoard.cshtml";
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-7 align-self-center">
            <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">Quản lý nhân viên</h4>
            <div class="d-flex align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item"><a href="~/Admin/DashBoard/Index">Dashboard</a></li>
                        <li class="breadcrumb-item active">Danh sách nhân viên</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<br />

<div class="card-body">
    <h3 class="text-dark text-uppercase card-title">Nhân viên</h3>
        @if (TempData["msgEditFailed"] != null)
        {
            <div class="alert alert-danger alert-dismissible bg-danger text-white border-0 fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                @TempData["msgEditFailed"]
            </div>
        }         
        @if (TempData["msgDeleteFailed"] != null)
        {
            <div class="alert alert-danger alert-dismissible bg-danger text-white border-0 fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                @TempData["msgDeleteFailed"]
            </div>
        }        
        @if (TempData["msgCreate"] != null)
        {
            <div class="alert alert-success alert-dismissible bg-success text-white border-0 fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                    @TempData["msgCreate"]
             </div>
        }        
        @if (TempData["msgEdit"] != null)
        {
            <div class="alert alert-success alert-dismissible bg-success text-white border-0 fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                    @TempData["msgEdit"]
             </div>
        }
    <hr />
    <div class="row">
        <div class="col-sm-12 col-md-6">
            <a href="/Admin/CRUDmember/Create" class="btn waves-effect waves-light btn-success" id="btnAdd">Thêm nhân viên</a>
        </div>
        <div class="col-sm-12 col-md-6">
            <div id="zero_config_filter" class="dataTables_filter" style="text-align: right;">
                <label style="display: flex; align-items: center;justify-content: flex-end;">
                    @using (Html.BeginForm("Index", "CRUDmember", FormMethod.Get, new { @style = "display: flex; align-items: center;" }))
                    {
                        <input type="search" name="searching" placeholder="Tên tài khoản..." class="form-control form-control-sm" aria-controls="zero_config" style="width:auto; height: 38px" />
                        <input type="submit" class="btn btn-primary" value="Tìm" />
                    }
                </label>
             </div>

        </div>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col" class="text-center">Tài khoản</th>
                    <th class="text-center">Tên</th>
                    <th class="text-center">Ngày sinh</th>
                    <th class="text-center">Số điện thoại</th>
                    <th class="text-center">Xác minh</th>
                    <th class="text-center">Quyền</th>
                    <th class="text-center">Tính năng</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {

                }
                else
                {
                    foreach (var i in Model)
                    {
                    <tr>
                        <th scope="row" class="text-center font-weight-medium">
                            <div class="d-flex no-block align-items-center">
                                 <div class="mr-3">
                                    <img src=@Url.Content("" + Html.DisplayFor(modelItem => i.avatar)) alt="user" class="rounded-circle" width="45" height="45" />
                                </div>
                                <div class="">
                                    <h5 class="text-dark mb-0 font-16 font-weight-medium">
                                        @i.userName
                                    </h5>
                                    <span class="text-muted font-14">@Html.DisplayFor(modelItem => i.email)</span>
                                </div>
                            </div>
                        </th>
                        <td class="text-center">
                            @i.firstName<span> </span>@i.lastName
                        </td>
                        <td class="text-center">
                            @{ 
                                DateTime date = new DateTime();
                                date = (DateTime)i.birthday;
                                string formatted = date.ToString("dd/MM/yyyy");
                            }
                            @formatted
                        </td>
                        <td class="text-center">@i.phone</td>
                        <td class="text-center">
                            @if (i.status == true)
                            {
                                <i class="fa fa-circle text-success font-12" data-toggle="tooltip" data-placement="top" title="Checked"></i> 
                            }
                            else
                            {
                                <i class="fa fa-circle text-danger font-12" data-toggle="tooltip" data-placement="top" title="Unchecked"></i>                
                            }
                        </td>
                        <td class="text-center">@i.Role.roleName</td>
                        <td width="170px">
                            <a href="@Url.Action("Edit", "CRUDmember", new { userName = i.userName })" class="btn waves-effect waves-light btn-primary"><i class="ti-pencil-alt"></i></a>
                            <a href="@Url.Action("Delete", "CRUDmember", new { userName = i.userName })" class="btn waves-effect waves-light btn-danger" onclick="return confirm('Bạn chắn chắn muốn xóa nó?')"><i class="ti-trash"></i></a>
                        </td>
                    </tr>
                                    }
                                }

            </tbody>
        </table>
    </div>

    <div class="row" style=" align-items: center">
        <div class="col-sm-12 col-md-5">
            <div class="dataTables_info" id="zero_config_info" role="status" aria-live="polite">Hiển thị
            @{
                int from = (Model.PageNumber - 1) * Model.PageSize + 1;
                int to = Math.Min(Model.PageNumber * Model.PageSize, Model.TotalItemCount);

                <span>
                    @from - @to
                </span>


                } trong @Model.TotalItemCount nhân viên</div>
        </div>
        <div class="col-sm-12 col-md-7">
            <div class="dataTables_paginate paging_simple_numbers" id="default_order_paginate">
                
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }), new PagedListRenderOptions() { LiElementClasses = new List<string> { "paginate_button", "page-item" } })
            </div>
        </div>
    </div>
</div>

<style>
    .page-item a {
        display: block;
        padding: .5rem .75rem;
        margin-left: -1px;
        line-height: 1.25;
        color: #5f76e8;
        background-color: #fff;
        border: 1px solid #dee2e6;
    }

    .pagination {
        margin: 2px 0;
        white-space: nowrap;
        justify-content: flex-end;
    }
</style>

